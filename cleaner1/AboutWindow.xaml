<Window x:Class="ModernFileCleaner.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About System Sweep" 
        Height="300" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF252526">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="System Sweep" 
                      Foreground="#FF007ACC" 
                      FontSize="24" 
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>
            
            <TextBlock Text="Version 1.0" 
                      Foreground="White"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,10"/>
            
            <TextBlock Text="A modern system cleaning tool" 
                      Foreground="LightGray"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,30"/>
            
            <TextBlock Text="2023 Your Company" 
                      Foreground="LightGray"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,30"/>
            
            <Button Content="OK" 
                    Width="80" 
                    Height="30" 
                    HorizontalAlignment="Center"
                    Background="#FF007ACC"
                    Foreground="White"
                    BorderBrush="#FF007ACC"
                    Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>