<Window x:Class="ModernFileCleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Modern File Cleaner (Admin)" Height="550" Width="850" 
        WindowStartupLocation="CenterScreen" 
        Background="#FF2D2D30"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF007ACC" Height="70">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="SystemSweep" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Cleaning Options -->
                <GroupBox Header="Cleaning Options" Foreground="White" FontWeight="Bold" BorderBrush="#FF007ACC">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="chkTemporaryFiles" Content="Temporary Files" Foreground="White" Margin="0,5"/>
                        <CheckBox x:Name="chkRecycleBin" Content="Empty Recycle Bin" Foreground="White" Margin="0,5"/>
                        <CheckBox x:Name="chkDownloadCache" Content="Download Cache" Foreground="White" Margin="0,5"/>
                        <CheckBox x:Name="chkThumbnailCache" Content="Thumbnail Cache" Foreground="White" Margin="0,5"/>
                        <CheckBox x:Name="chkWindowsLogs" Content="Windows Log Files (.log)" Foreground="White" Margin="0,5"/>
                        <CheckBox x:Name="chkErrorReports" Content="Windows Error Reports" Foreground="White" Margin="0,5"/>
                        <CheckBox x:Name="chkInstallerTemp" Content="Installer Temporary Files" Foreground="White" Margin="0,5"/>
                        <CheckBox x:Name="chkStoreCache" Content="Microsoft Store Cache" Foreground="White" Margin="0,5"/>
                        <CheckBox x:Name="chkWindowsOld" Content="Windows.old Folder (Admin)" Foreground="#FFFF4500" Margin="0,5" FontWeight="Bold"/>
                        <CheckBox x:Name="chkMemoryDumps" Content="System Memory Dumps (Admin)" Foreground="#FFFF4500" Margin="0,5" FontWeight="Bold"/>
                    </StackPanel>
                </GroupBox>

                <!-- Statistics -->
                <GroupBox Header="Statistics" Foreground="White" FontWeight="Bold" BorderBrush="#FF007ACC" Margin="0,20,0,0">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Total Space to Clean:" Foreground="White" Width="180"/>
                            <TextBlock x:Name="txtSpaceToClean" Text="0 MB" Foreground="#FF007ACC" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Last Cleaned:" Foreground="White" Width="180"/>
                            <TextBlock x:Name="txtLastCleaned" Text="Never" Foreground="#FF007ACC" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Running as Admin:" Foreground="White" Width="180"/>
                            <TextBlock x:Name="txtAdminStatus" Text="No" Foreground="Red" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Progress -->
                <GroupBox Header="Progress" Foreground="White" FontWeight="Bold" BorderBrush="#FF007ACC" Margin="0,20,0,0">
                    <StackPanel Margin="10">
                        <ProgressBar x:Name="progressBar" Height="25" Margin="0,5" Foreground="#FF007ACC"/>
                        <TextBlock x:Name="txtProgressStatus" Text="Ready" Foreground="White" HorizontalAlignment="Center" Margin="0,5"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="#FF252526" Height="70">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="btnAnalyze" Content="Analyze" Width="130" Height="35" Margin="10,0" 
                        Background="#FF007ACC" Foreground="White" BorderBrush="#FF007ACC" Click="btnAnalyze_Click"/>
                <Button x:Name="btnClean" Content="Clean Now" Width="130" Height="35" Margin="10,0" 
                        Background="#FF007ACC" Foreground="White" BorderBrush="#FF007ACC" Click="btnClean_Click"/>
                <Button x:Name="btnSettings" Content="Settings" Width="130" Height="35" Margin="10,0" 
                        Background="#FF007ACC" Foreground="White" BorderBrush="#FF007ACC" Click="btnSettings_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>